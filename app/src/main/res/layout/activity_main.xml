<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view_warning_tracking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/red_border_line"
        android:visibility="invisible" />

    <LinearLayout
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <Button
                    android:id="@+id/btn_start_calibration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="start calibration" />

                <Button
                    android:id="@+id/btn_set_calibration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="set calibration" />

                <Button
                    android:id="@+id/btn_gui_demo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="gaze path demo" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Gaze coordinates -->
    <com.example.gazereader.view.GazePathView
        android:id="@+id/gazePathView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.example.gazereader.view.FaceBoxView
        android:id="@+id/view_face_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Calibration view -->
    <com.example.gazereader.view.CalibrationViewer
        android:id="@+id/view_calibration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

    </com.example.gazereader.view.CalibrationViewer>

    <include layout="@layout/layout_progress" />

</androidx.constraintlayout.widget.ConstraintLayout>